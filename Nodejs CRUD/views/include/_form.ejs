 <!--Form Handling-->
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100" >
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
          <div class="card shadow-2-strong card-registration" style="border-radius: 15px;" >
            <div class="card-body p-4 p-md-5" style=" background: linear-gradient(to right,  #02AAB0,#00CDAC);">
              <h3 class="mb-4 pb-2 pb-md-0 mb-md-5"><center>Add New User</center></h3>
              <form action="/api/users" method="POST" id="add_user">
  
                <div class="row">
                  <div class="col-md-6 mb-4">
  
                    <div class="form-outline">
                      <input type="hidden" name="id" value="">
                      <input type="text" id="Name" name="name" class="form-control form-control-lg" />
                      <label class="form-label" name="name">Name</label>
                    </div>
  
                  </div>
                  <div class="col-md-6 mb-4">
  
                    <div class="form-outline">
                      <input type="text" id="Email" name="email" class="form-control form-control-lg" />
                      <label class="form-label" name="email">Email</label>
                    </div>
  
                  </div>
                </div>
  
                <div class="row">
                  <div class="col-md-6 mb-4">
  
                    <h6 class="mb-2 pb-1">Gender: </h6>
  
                    <div class="form-check form-check-inline">
                      <div class="radio inline">
                        <input type="radio" id="radio-2" name="gender" value="Male" >
                        <label for="radio-2" class="radio-label">Male</label>
                    </div>
                    </div>
  
                    <div class="form-check form-check-inline">
                      <div class="radio inline">
                        <input type="radio" id="radio-3" name="gender" value="Female" >
                        <label for="radio-3" class="radio-label">Female</label>
                    </div>
                    </div> 
                  </div>
                  <div class="col-md-6 mb-4">
    
                    <h6 class="mb-2 pb-1">Status: </h6>
  
                    <div class="form-check form-check-inline">
                      <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Active" >
                        <label for="radio-4" class="radio-label">Active</label>
                    </div>
                    </div>
  
                    <div class="form-check form-check-inline">
                      <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Inactive" >
                        <label for="radio-5" class="radio-label">Inactive</label>
                    </div>
                    </div>
                  </div>
                </div>
                <div class="mt-4 pt-2">
                  <input class="btn btn-info btn-block" type="submit" value="Submit" />
                  <input class="btn btn-danger btn-block" type="reset" value="Reset" />
                </div>
  
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<!--/Form Handling-->